
<% if @recipes.nil? %>
<p>No recipes found</p>
<% else %>
<p>Somethings found</p>

<table border="1">
  <tr>
  	<th>Thumbnail</th>
  	<th>Title</th>
  	<th>Social rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= link_to(image_tag(recipe["image_url"], size: '100x100'), recipe["source_url"])%></td>
      <td><%= link_to(sanitize(recipe["title"]), recipe["source_url"]) %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>

<% end %>